@model NascimentoSoftware.ToDoAppV2.com.Models.Tarefa

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            Previsão de horas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrevisaoHoras)
        </dd>
        <dt class = "col-sm-2">
            Horas utilizadas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasUtilizadas)
        </dd>
        <dt class = "col-sm-2">
            Data de registro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRegistro)
        </dd>
        <dt class = "col-sm-2">
            Data de início
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            Data de finalização
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinalizacao)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a class="btn btn-primary" asp-action="Index">Retornar</a>
</div>
