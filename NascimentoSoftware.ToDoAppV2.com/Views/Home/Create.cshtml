@model NascimentoSoftware.ToDoAppV2.com.Models.Tarefa

@{
    ViewData["Title"] = "Create";
}

<h1>Crie uma Tarefa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrevisaoHoras" class="control-label">Previsão de horas</label>
                <input asp-for="PrevisaoHoras" class="form-control" />
                <span asp-validation-for="PrevisaoHoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorasUtilizadas" class="control-label">Horas utilizadas</label>
                <input asp-for="HorasUtilizadas" class="form-control" />
                <span asp-validation-for="HorasUtilizadas" class="text-danger"></span>
            </div>      
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label">Data de início</label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFinalizacao" class="control-label">Previsão data de finalização</label>
                <input asp-for="DataFinalizacao" class="form-control" />
                <span asp-validation-for="DataFinalizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
